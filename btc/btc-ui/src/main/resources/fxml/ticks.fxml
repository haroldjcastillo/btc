<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="50.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.haroldjcastillo.btc.ui.TickController">
   <children>
      <AnchorPane style="-fx-background-color: #01579b;">
         <children>
            <Label fx:id="descriptionTick" layoutX="200.0" layoutY="18.0" text="Label" textFill="WHITE">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font></Label>
            <Label fx:id="tickCount" layoutX="149.0" layoutY="18.0" text="Label" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <Label layoutX="25.0" layoutY="15.0" text="Ticks" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ImageView fx:id="dowmImage" fitHeight="48.0" fitWidth="48.0" layoutX="101.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Sort_Down_48px.png" />
               </image>
            </ImageView>
            <ImageView fx:id="upImage" fitHeight="48.0" fitWidth="48.0" layoutX="81.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Sort_Up_48px_1.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</VBox>
